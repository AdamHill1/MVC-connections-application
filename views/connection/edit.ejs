<%- include('../partials/header.ejs')%>
    
    <main>
        <form method="POST" action="/connection/<%= sports.id%>?_method=PUT">
            <ul id="formUL">
             <li>
               <label for="ftopic">Topic</label>
               <input type="text" id="ftopic" name="topic" value="<%= sports.topic%>"required>
             </li>
             <li>
               <label for="ftitle">Title</label>
               <input type="text" id="ftitle" name="title" value="<%= sports.title%>" required>
             </li>
             <li>
                <label for="fdetails">Details</label>
                <input type="text" id="fdetails" name="details" value="<%= sports.details%>" required minlength="10">
              </li>
              <li>
                <label for="flocation">Location</label>
                <input type="text" id="flocation" name="location" value="<%= sports.location%>"required>
              </li>
              <li>
                <label for="fwhen">When</label>
                <input type="date" id="fwhen" name="date" value="<%= sports.date%>"required>
              </li>
              <li>
                <label for="fstart">Start</label>
                <input type="time" id="fstart" name="startM" value="<%= sports.startM%>"required>
              </li>
              <li>
                <label for="fend">End</label>
                <input type="time" id="fend" name="endM" value="<%= sports.endM%>"required>
              </li>
              <li>
                <label for="feimage">Image URL</label>
                <input type="text" id="feimage" name="image" value="<%= sports.image%>"required>
              </li>
              <li class="button">
                <button type="submit">Create Connection</button>
              </li>
            </ul>
           </form>
          </main>

           <%- include('../partials/footer.ejs')%>
